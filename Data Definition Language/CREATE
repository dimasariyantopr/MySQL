CREATE merupakan perintah yang digunakan untuk membuat database dan tabel

1. Membuat database dengan nama "sekolah"

CREATE DATABASE sekolah;

2. Membuat tabel dengan nama "siswa" dengan kolom "nis", "nama", "kelas" dan "nis" sebagai primary key
  - Kolom nis bertipe data "Integer" dan maksimal berisi "10" karakter
  - Kolom "nama" bertipe data "Varchar" dan maksimal berisi "50" karakter
  - Kolom "kelas" bertipe data "Varchar" dan maksimal berisi "10" karakter

CREATE TABLE siswa (nis INT(10), nama VARCHAR(50), kelas VARCHAR(10), PRIMARY KEY (nis));
