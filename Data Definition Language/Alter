//Alter merupakan sebuah perintah yang digunakan untuk mengubah struktur table, meliputi ADD (menambah), MODIFY (mengubah), dan DRROP (menghapus) kolom pada tabel//

//ADD --> Menambah kolom "umur" pada tabel "siswa"//
ALTER TABLE siswa ADD umur INT(2);

//MODIFY --> Mengubah tipe data pada kolom "nama" menjadi "text" pada tabel "siswa"//
ALTER TABLE siswa MODIFY nama TEXT;

//DROP --> Menghapus kolom "umur" pada tabel "siswa"//
ALTER TABLE siswa DROP umur;
